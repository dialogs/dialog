extends ../global/layout
include ../mixins/svg
include ../mixins/button
include ../mixins/button-play
include ../mixins/picture
include ../mixins/form-career
include ../mixins/sections

block variables
  -
    const title = t.meta.career_title;
    const desc = t.meta.main_desc;
    const routeClass = "js-route-main";
    const pageName = "career";
    const values = [
    {
    icon: 'purple-watch',
    iconw: '43',
    iconh: '43',
    title: t.career.values_title_1,
    text: t.career.values_text_1,
    },
    {
    icon: 'purple-rocket',
    iconw: '43',
    iconh: '43',
    title: t.career.values_title_2,
    text: t.career.values_text_2,
    },
    {
    icon: 'purple-chat',
    iconw: '43',
    iconh: '43',
    title: t.career.values_title_3,
    text: t.career.values_text_3,
    },
    ];

block content
  section.hero.hero--main.hero--career.hero--secondary.hero--next-no-bg
    .hero__wrapper
      .hero__left
        h1.hero__title=t.career.title
        p.hero__text=t.career.sub
        +button(
          t.button.vacancy_open,
          {
            styleType: 'accent',
            isLink: true,
            href:"https://hh.ru/search/vacancy?st=searchVacancy&from=employerPage&employer_id=2487053",
            blank: true,
            additionalClassName: 'button--hero button--link'
          })
          +svg('arrow-right', 16, 15)
      .hero__right
        .hero__img
          +picture('/img/pages/career/hero', 'png', t.alt.people, 682)
  section.mission
    .wrapper.wrapper--main
      .wrap
        .mission__left
          h3.mission__title=t.career.create_title
          p.mission__description=t.career.create_sub_1
          p.mission__description=t.career.create_sub_2
        .mission__right
          .mission__count.card.card--white.card--lg
            span.mission__text.mission__text--big >100
            span.mission__text.mission__text--small=t.career.create_text_1
            br
            span.mission__text.mission__text--big 2
            span.mission__text.mission__text--small=t.career.create_text_2
  section.gallery
    .wrap
      each val, index in Array(15)
        .col
          .gallery__img-wrapper
            +picture(`/img/gallery/gallery${index + 1}`, 'png', t.alt.pm, 333)
  section.icon-text.icon-text--3
    .wrapper.wrapper--main
      h2=t.career.values_title
      .wrap.wrap--main.wrap--gap-sm
        each item,index in values
          .col
            .card
              .icon.icon--shadow.icon--md.icon--round
                +svg(item.icon, item.iconw, item.iconh)
              h6=item.title
              span.text=item.text
  section.box.box--sand
    .wrapper.wrapper--main
      .cta.cta--center.cta--lg.cta--career
        .wrap.wrap--c.wrap--w
          .wrap.wrap--c.wrap--s
            .icon.icon--lg.icon--round
              +svg('purple-human', 55, 55)
          .wrap.wrap--c.wrap--s
            h2.title=t.cta.vacancy_title
          .wrap.wrap--c.wrap--s
            p.text=t.cta.vacancy_sub
        .wrap.wrap--c
          +button(
            t.button.vacancy_all,
            {
              styleType: 'accent',
              isLink: true,
              href: "https://hh.ru/search/vacancy?st=searchVacancy&from=employerPage&employer_id=2487053",
              blank: true,
              additionalClassName: 'button--link'
            })
            +svg('arrow-right', 16, 15)

  +section-image-collage(t.career.collage_title,t.career.collage_desc,'/img/pages/about/team1','/img/pages/about/team2','/img/pages/about/team3','career')
  section.box.box--lilac
    +form-career(1, 'form-career','career')


